{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ESNext",
    "target": "es2016",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "strict": true,
    "esModuleInterop": true,
    "incremental": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "vue/ref-macros",
      "vite-plugin-pages/client",
    ],
    "paths": {
      "~/*": [
        "src/*"
      ],
      "@playground/config": [
        "vueuse-playground.config.ts"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "cypress"
  ]
}